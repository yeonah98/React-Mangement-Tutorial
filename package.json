{
  "name": "management",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm server\" \"npm client\""
  },
  "dependencies": {
    "express": "^4.17.2",
    "nodemon": "^2.0.15"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  },
  "events": {
		"restart": "kill-port 3000",
		"crash": "kill-port 3000"
	 },
	"delay": "1500"
}
